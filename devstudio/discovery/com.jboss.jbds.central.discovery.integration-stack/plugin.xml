<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.mylyn.discovery.core.connectorDiscovery">

    <!-- Note - do not modify the siteUrl fields here.  They are based on an ide-config.properties value. -->
    <connectorCategory
       description="JBoss Developer Studio Integration Stack Tools for use with individual JBoss projects (or products)."
       id="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       name="JBoss Developer Studio Integration Stack"
       relevance="90">
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-generic" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-ds" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-bpr" />
      <group id="com.jboss.jbds.central.discovery.integration-stack.extras-bpel-examples" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-soa" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-switchyard" />
    </connectorCategory>

    <!-- JBoss Integration Stack Generic Connector
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-generic"
       certificationId="com.jboss.devstudio.discovery.certification.notavailable"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Developer Studio Integration Stack Early Access Components"
       description="Data Virtualization is available by selecting 'Enable Early Access'."
       id="jboss.integration-stack.generic.notavailable"> 
       <icon
          image32="images/jbds_icon32.png">
       </icon>
       <overview
          url="http://devstudio.redhat.com/">
       </overview>
    </connectorDescriptor>
    -->

    <!-- JBoss Business Process and Rules Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-bpr"
       certificationId="com.jboss.devstudio.discovery.certification.supported"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Business Process and Rules Development"
       description="Tools related to business processes and rules development support for BPEL, BPMN2, Drools, jBPM6 and KIE."
       id="jboss.integration-stack.bundle.bpr">
      <iu id="org.jboss.tools.bpel.feature"/>
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.jbpm.eclipse.feature"/>
      <iu id="org.kie.eclipse.feature"/>
      <iu id="org.kie.eclipse.navigator.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Data Virtualization Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-ds"
       certificationId="com.jboss.devstudio.discovery.certification.supported"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Data Virtualization Development"
       description="Tools related to data virtualization such as persistence and transformation - includes support for Teiid Designer."
       id="jboss.integration-stack.bundle.ds">
      <iu id="org.teiid.datatools.connectivity.feature"/>
      <iu id="org.teiid.designer.feature"/>
      <iu id="org.teiid.designer.runtime.feature"/>
      <iu id="org.teiid.designer.teiid.client.feature"/>
      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Integration and SOA Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-soa"
       certificationId="com.jboss.devstudio.discovery.certification.supported"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Integration and SOA Development"
       description="Tools related to the development of Integration and SOA applications."
       id="jboss.integration-stack.bundle.soa">
       <iu id="org.eclipse.bpmn2.feature"/>
       <iu id="org.eclipse.bpmn2.modeler"/>
       <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
       <iu id="org.jbpm.eclipse.feature"/>
       <iu id="org.kie.eclipse.feature"/>
       <iu id="org.kie.eclipse.navigator.feature"/>
       <iu id="org.switchyard.tools.feature"/>
       <iu id="org.switchyard.tools.bpel.feature"/>
       <iu id="org.switchyard.tools.bpmn2.feature"/>

      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Tools SwitchYard -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-switchyard"
       certificationId="com.jboss.devstudio.discovery.certification.supported"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Tools SwitchYard (DEPRECATED)"
       description="A lightweight service delivery framework providing full lifecycle support for developing, deploying, and managing service-oriented applications."
       id="jboss.integration-stack.bundle.switchyard">
       <iu id="org.switchyard.tools.feature"/>
       <iu id="org.switchyard.tools.bpel.feature"/>
       <iu id="org.switchyard.tools.bpmn2.feature"/>
       <icon
          image32="images/jbds_icon32.png">
       </icon>
       <overview
          url="http://tools.jboss.org/features/apachecamel.html">
       </overview>
    </connectorDescriptor>

  </extension>

</plugin>
