    <profile>
      <id>jboss-release</id>
      <activation>
       <activeByDefault>false</activeByDefault>
      </activation>
      <properties>      
          <nexusRepo>https://${jbossNexus}/nexus/content/repositories/releases/</nexusRepo>
      </properties>
    </profile>

