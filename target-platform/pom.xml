	      <sourceTargetFiles>
		<item>${basedir}/src/targets/integration-stack-base.target</item>
		<item>${basedir}/src/targets/core-base.target</item>
	      </sourceTargetFiles>

	      <outputFile>${project.build.directory}/aggregate-base.target</outputFile>

	    </configuration>
	  </execution>

