<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.mylyn.discovery.core.connectorDiscovery">
    
    <!-- Note - do not modify the siteUrl fields here.  They are based on an ide-config.properties value. -->
    <connectorCategory
       description="JBoss Integration Stack Tools for use with individual JBoss projects (or products)"
       id="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       name="JBoss Tools Integration Stack"
       relevance="90">
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle.dv" />
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle.brms" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle.prod" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle.generic" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-switchyard" />
    </connectorCategory>

    <!-- JBoss Integration Stack Generic Connector
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle.generic"
       certificationId="org.jboss.tools.discovery.certification.notavailable"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Tools Integration Stack Early Access Components"
       description="Data Virtualization is available by selecting 'Enable Early Access'."
       id="jboss.integration-stack.generic.notavailable">
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://www.jboss.org/tools/">
      </overview>
    </connectorDescriptor>
    -->
    <!-- JBoss Business Process and Rules Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle.brms"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Business Process and Rules Development"
       description="Tools related to business processes and rules development - includes support for BPEL, BPMN2, jBPM, Drools and KIE."
       id="jboss.integration-stack.bundle.bpr">
      <iu id="org.jboss.tools.bpel.feature"/>
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.jbpm.eclipse.feature"/>
      <iu id="org.kie.eclipse.feature"/>
      <iu id="org.kie.eclipse.navigator.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://www.jboss.org/tools/">
      </overview>
    </connectorDescriptor> 

    <!-- JBoss Data Virtualization Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle.dv"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Data Virtualization Development"
       description="Tools related to data virtualization such as persistence and transformation - includes support for Teiid Designer."
       id="jboss.integration-stack.ea.bundle.ds">
      <iu id="org.teiid.datatools.connectivity.feature"/>
      <iu id="org.teiid.designer.feature"/>
      <iu id="org.teiid.designer.runtime.feature"/>
      <iu id="org.teiid.designer.teiid.client.feature"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://www.jboss.org/tools/">
      </overview>
    </connectorDescriptor> 

    <!-- JBoss Integration and SOA Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle.prod"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Integration and SOA Development"
       description="Tools related to the development of Integration and SOA applications."
       id="jboss.integration-stack.bundle.soa">
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <iu id="org.jbpm.eclipse.feature"/>
      <iu id="org.kie.eclipse.feature"/>
      <iu id="org.kie.eclipse.navigator.feature"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://www.jboss.org/tools/">
      </overview>
    </connectorDescriptor> 

    <!-- JBTIS single component sites -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle.brms"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss BPEL"
       description="JBoss Business Logic - Orchestrating your business processes"
       id="org.jboss.tools.bpel.feature">
      <icon
	 image32="images/jbds_bpel_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle.brms"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Business Process Modeling"
       description="A graphical modeling tool which allows creation and editing of Business Process Modeling Notation diagrams "
       id="org.eclipse.bpmn2.feature">
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <icon
	 image32="images/jbosstools_icon32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle.brms"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Drools"
       description="JBoss Drools Core, Task Management, Runtime Detection"
       id="org.drools.eclipse.feature">
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <icon
	 image32="images/jbds_drools_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       groupId="om.jboss.jbds.central.discovery.integration-stack.bundle.brms"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss KIE Tools"
       description="JBoss Tools Knowledge Is Everything"
       id="org.jboss.jbpm.eclipse.feature">
      <iu id="org.kie.eclipse.feature"/>
      <iu id="org.kie.eclipse.navigator.feature"/>
      <icon
	 image32="images/jbds_drools_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>
    
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-switchyard"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Tools SwitchYard (Deprecated)"
       description="A lightweight service delivery framework providing full lifecycle support for developing, deploying, and managing service-oriented applications (Deprecated)"
       id="org.switchyard.tools.feature">
      <iu id="org.switchyard.tools.feature"/>
      <iu id="org.switchyard.tools.bpel.feature"/>
      <iu id="org.switchyard.tools.bpmn2.feature"/>
      <icon
	 image32="images/jbds_switchyard_32.png">
      </icon>
      <overview
	 url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

  </extension>

</plugin>
